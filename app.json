{
  "name": "teachcomputing",
  "scripts": {
    "postdeploy": "bin/rails db:migrate"
  },
  "env": {
    "RAILS_ENV": {
      "required": true
    },
    "STEM_OAUTH_SITE": {
      "required": true
    },
    "STEM_OAUTH_AUTH_URL": {
      "required": true
    },
    "STEM_OAUTH_ACCESS_TOKEN_URL": {
      "required": true
    },
    "SENTRY_DSN": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql:hobby-basic"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ]
}

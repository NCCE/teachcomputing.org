{
  "name": "teachcomputing",
  "scripts": {
    "postdeploy": "bundle exec rake review_app:setup"
  },
  "env": {
    "RAILS_ENV": {
      "required": true
    },
    "ADESTRA_ENDPOINT": {
      "required": true
    },
    "STATIC_FILE_PATH": {
      "required": true
    },
    "STEM_OAUTH_SITE": {
      "required": true
    },
    "STEM_OAUTH_AUTH_URL": {
      "required": true
    },
    "STEM_OAUTH_CALLBACK_URL": {
      "required": true
    },
    "STEM_OAUTH_ACCESS_TOKEN_URL": {
      "required": true
    },
    "STEM_CREDENTIALS_ACCESS_TOKEN_KEY": {
      "required": true
    },
    "STEM_CREDENTIALS_REFRESH_TOKEN_KEY": {
      "required": true
    },
    "STEM_OAUTH_CLIENT_ID": {
      "required": true
    },
    "SENTRY_DSN": {
      "required": true
    },
    "STEM_OAUTH_CLIENT_SECRET": {
      "required": true
    },
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "AWS_S3_BUCKET": {
      "required": true
    },
    "AWS_S3_REGION": {
      "required": true
    },
    "BYPASS_OAUTH": {
      "description": "OAuth doesn't work because of the unpredictable URLs",
      "value": "true"
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql:hobby-basic"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/DataDog/heroku-buildpack-datadog"
    },
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ]
}

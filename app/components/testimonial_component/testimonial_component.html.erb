<div class="testimonial lp-testimonials__testimonial">
  <p class="govuk-body testimonial__text">
    <%= @text %>
  </p>
  <div class="testimonial__bio lp-testimonials__testimonial-bio">
    <%= image_pack_tag @image, alt: @name, class: 'testimonial__image' %>
    <p class="govuk-body-s lp-testimonials__testimonial-bio-text">
      <% if @link_target.present? %>
        <strong class="name">
          <%= link_to @name, @link_target,
            class: 'ncce-link',
            data: { event_action: 'click',
                    event_category: @event_category,
                    event_label: @event_label }
        %>
        </strong>
      <% else %>
        <span class="name">
          <%= @name %>
        </span>
      <% end %>
      <%= @bio %>
    </p>
  </div>
</div>
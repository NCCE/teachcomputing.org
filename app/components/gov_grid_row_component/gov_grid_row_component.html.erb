<%= content_tag :div, class: wrapper_classes do %>
  <%= content_tag :div, class: "govuk-width-container" do %>
    <%= content_tag :div, class: main_wrapper_classes do %>
    <% if section_title? %>
      <%= content_tag :div, class: "govuk-grid-row" do %>
        <%= render GovGridColumnComponent.new("full") do %>
          <%= section_title %>
        <% end %>
      <% end %>
    <% end %>
      <%= content_tag :div, class: "govuk-grid-row" do %>
        <% columns.each do |col| %>
          <%= col %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
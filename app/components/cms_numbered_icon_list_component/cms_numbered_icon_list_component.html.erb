<%= render GovGridRowComponent.new() do |row| %>
  <%= row.with_column("two-thirds") do %>
    <% if @title %>
      <h1 class="govuk-heading-m"><%= @title %></h1>
    <% end %>

    <div class="numbered-points">
      <% @points.each_with_index do |point, index| %>
        <div class="numbered-point">
          <div class="numbered-point__number"><%= index + 1 %></div>
          <div class="numbered-point__content">
            <%= render point.render %>
          </div>
        </div>
      <% end %>
    </div>

  <% end %>
<% end %>

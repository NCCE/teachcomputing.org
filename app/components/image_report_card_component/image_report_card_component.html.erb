<%= content_tag :div, class: ['image-report-card-component__wrapper', { "#{@class_name}": @class_name.present? } ], data: { show_border: @show_border } do %>
  <div class='image-report-card-component__image-wrapper'>
    <%= image_pack_tag @image[:path], class: 'image-report-card-component__image', alt: @image[:alt] %>
  </div>
  <div class='image-report-card-component__text-wrapper'>
    <h2 class="govuk-heading-m image-report-card-component__title"><%= @title %></h2>
    <% unless @date.blank? %>
      <p class="govuk-body govuk-body-s image-report-card-component__date"><%= @date %></p>
    <% end %>
    <p class="govuk-body image-report-card-component__text"><%= @text %></p>
    <div class='image-report-card-component__button'>
      <%= link_to @button[:button_title], @button[:button_url], class: 'govuk-button button govuk-!-margin-bottom-0', data: {
        event_action: 'click', event_category: @button[:tracking_page], event_label: @button[:tracking_label]
      }  %>
    </div>
  </div>
<% end %>

<div class="<%= wrapper_classes %>">

  <div class="enrichment__type">
    <div class="enrichment__type-label">
      <%= @type %>
    </div>
    <div class="enrichment__type-icon">
      <!-- TODO -->
    </div>
  </div>

  <div class="enrichment__title">
    <%= render CmsRichTextBlockComponent.new(blocks: @title, with_wrapper: false) %>
  </div>

  <div class="enrichment__content">
    <%= render CmsRichTextBlockComponent.new(blocks: @details, paragraph_class: "govuk-body-s", with_wrapper: false) %>
  </div>

  <div class="enrichment__term-details">
    <%= @terms.join(", ") %>
    |
    <%= @age_groups.join(", ") %>
  </div>

  <div class="enrichment__partner-logo">
    <% if @partner_icon %>
      <%= cms_image(@partner_icon) %>
    <% end %>
  </div>
</div>

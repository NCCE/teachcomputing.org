<%= render GovGridRowComponent.new(background_color: @background_color) do |row| %>
  <%= row.with_column("full") do %>
    <% if @title %>
      <h2 class="govuk-heading-m"><%= @title %></h2>
    <% end %>
    <div class="cms-accordion-section-component govuk-accordion govuk-body" data-module="govuk-accordion" id="accordion-section-<%= @id %>">
      <% @accordion_blocks.each do |block| %>
        <%= render block.render  %>
      <% end %>
    </div>
  <% end %>
<% end %>

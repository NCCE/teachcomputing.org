<%= content_tag :div, class: wrapper_classes do %>
  <%= content_tag :div, class: content_classes do %>
    <% if @icon %>
      <div class="cms-side-banner__icon">
        <%= render @icon.render %>
      </div>
    <% end %>
    <div class="cms-side-banner__text">
      <%= render @text_content.render %>
    </div>
  <% end %>
<% end %>
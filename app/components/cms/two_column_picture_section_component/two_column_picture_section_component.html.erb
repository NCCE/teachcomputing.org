<%= render GovGridRowComponent.new(background_color: @background_color, additional_classes: "cms-two-column-picture-section-component") do |row|  %>
  <%= row.with_column("full") do %>
    <%= content_tag :div, class: image_align_classes do %>
      <div class="tc-row-half">
        <%= render @image.render %>
      </div>
      <div class="tc-row-half tc-half-row__with-banner">
        <%= render @text.render %>
        <% if @banner %>
          <%= render @banner.render %>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>

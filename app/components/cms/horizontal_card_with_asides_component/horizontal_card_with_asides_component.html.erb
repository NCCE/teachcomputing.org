<%= render GovGridRowComponent.new(background_color: @background_color) do |row| %>
  <%= row.with_column("two-thirds") do %>
    <%= content_tag :div, class: wrapper_classes do %>
      <%= render @text.render %>
      <% if @button %>
        <%= render @button.render %>
      <% end %>
    <% end %>
  <% end %>

  <%= row.with_column("one-third") do %>
    <%= render_parent %>
  <% end %>
<% end %>

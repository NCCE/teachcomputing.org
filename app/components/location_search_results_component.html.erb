<% if show_no_results_message? %>
  <%= render NoCoursesComponent.new(hub: @course_filter.current_hub) %>
<% else %>
  <% if courses_present? %>
    <p class="govuk-body-s">
      <%= t('showing_face_to_face_courses', count: @course_filter.location_based_results.courses_count) %>
    </p>
  <% else %>
    <p class="location-search-results__no-courses govuk-body-s">
      There are no face to face courses within <%=  @course_filter.current_radius %> miles
    </p>
  <% end %>
  <%= render CourseComponent.with_collection(@course_filter.location_based_results&.courses, filter: @course_filter) %>
  <%= render MoreCoursesComponent.new(course_filter: @course_filter) %>
<% end %>

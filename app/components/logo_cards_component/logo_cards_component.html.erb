<%= content_tag :div, class: ['logo-cards-component', { "#{@class_name}": @class_name.present? }], style: custom_properties do %>
  <% @cards.each do | card | %>
    <%= content_tag :div, class: ['logo-card', { "#{card[:class_name]}": card[:class_name].present? }] do %>
      <div class="logo-card__image-wrapper">
        <%= image_pack_tag card[:image_url], alt: card[:title_link][:title], class: 'logo-card__image' %>
      </div>
      <h2 class="govuk-heading-m logo-card__title">
        <%= link_to card[:title_link][:title], card[:title_link][:title_url], class: 'ncce-link ncce-link--heading', data: {
          event_action: 'click', event_category: card[:title_link][:tracking_page], event_label: card[:title_link][:tracking_label]
        } %>
      </h2>
    <% end %>
  <% end %>
<% end %>

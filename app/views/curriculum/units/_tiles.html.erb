<div class="govuk-grid-row">
	<div class="govuk-grid-column-full">
		<div class="curriculum__tiles">
      <% unless unit.unit_guide.nil? %>
        <div class="curriculum__tile">
          <h3 class="govuk-heading-s curriculum__tile--heading"><%= link_to 'Unit overview', generate_download_url(unit.unit_guide), class: 'govuk-link ncce-link' %></h3>
        </div>
      <% end %>
      <% unit.learning_graphs.each do |learning_graph_url| %>
        <div class="curriculum__tile">
          <h3 class="govuk-heading-s curriculum__tile--heading"><%= link_to 'Learning graph', generate_download_url(learning_graph_url), class: 'govuk-link ncce-link' %></h3>
        </div>
      <% end %>
      <% unit.rubrics.each do |rubric_url| %>
        <div class="curriculum__tile">
          <h3 class="govuk-heading-s curriculum__tile--heading"><%= link_to 'Rubric', generate_download_url(rubric_url), class: 'govuk-link ncce-link' %></h3>
        </div>
      <% end %>
      <% unit.summative_assessments.each do |summative_assessment_url| %>
        <div class="curriculum__tile">
          <h3 class="govuk-heading-s curriculum__tile--heading"><%= link_to 'Summative assessment', generate_download_url(summative_assessment_url), class: 'govuk-link ncce-link' %></h3>
        </div>
      <% end %>
      <% unit.summative_answers.each do |summative_answers_url| %>
        <div class="curriculum__tile">
          <h3 class="govuk-heading-s curriculum__tile--heading"><%= link_to 'Summative answers', generate_download_url(summative_answers_url), class: 'govuk-link ncce-link' %></h3>
        </div>
      <% end %>
		</div>
	</div>
</div>

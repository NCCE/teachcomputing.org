<div class="govuk-grid-row">
	<div class="govuk-grid-column-full">
		<h3 class="govuk-heading-m">Lessons</h3>
			<ul class="govuk-list govuk-body-l govuk-!-padding-bottom-7">
        <% lessons.each do |lesson| %>
          <li class="curriculum__list--item <%= ['1', '2'].include?(key_stage.level) ? 'curriculum__list--item-orange' : 'curriculum__list--item-purple' %>"><%= link_to lesson.title, curriculum_key_stage_unit_lesson_path(key_stage_slug: key_stage.slug, unit_slug: unit.slug, lesson_slug: lesson.slug), class: 'govuk-link ncce-link' %></li>
        <% end %>
			</ul>
	</div>
</div>

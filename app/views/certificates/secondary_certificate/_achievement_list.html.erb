<ul class="govuk-list ncce-activity-list ncce-activity-list--programme" role="list">
  <%= render 'certificates/achievements',
      presenters: @user_programme_achievements.online_achievements(to_show = 1),
      category: Activity::ONLINE_CATEGORY,
      diagnostic_result_percentage: 'none'
  %>

  <%= render 'certificates/achievements',
      presenters: @user_programme_achievements.face_to_face_achievements(to_show = 1),
      category: Activity::FACE_TO_FACE_CATEGORY,
      diagnostic_result_percentage: 'none'
  %>
</ul>

<% @programme_activity_groupings.where(sort_key: 3..5).order(:sort_key).each do |group| %>
  <ul class="govuk-list ncce-activity-list ncce-activity-list--programme" role="list">
    <p class="govuk-body"><strong><%= group.title %> - complete <%= group.required_for_completion %> of the following activities:</strong></p>
    <%= render 'achievements', presenters: @user_programme_achievements.secondary_activities(group.programme_activities) %>
  </ul>
<% end %>

<ul class="govuk-list ncce-activity-list ncce-activity-list--programme" role="list">
  <li class="ncce-activity-list__item">
    <span class="ncce-activity-list__item-text">Created your account with the National Centre for Computing Education</span>
  </li>
  <%= render 'certificates/achievements', presenters: @user_programme_achievements.diagnostic_achievements %>
  <%= render 'certificates/achievements', presenters: @user_programme_achievements.face_to_face_achievements(to_show = 1) %>
  <%= render 'certificates/achievements', presenters: @user_programme_achievements.online_achievements(to_show = 1) %>
  <%= render 'certificates/community_achievements', presenters: @user_programme_achievements.community_activities(to_show = 1, credit = 5) %>
</ul>

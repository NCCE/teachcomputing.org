<%= render DashboardProgrammeActivityGroupSectionComponent.new(title: t('.development.title.html'), 
  aside_slug: "i-belong-dashboard-help-section",
  programme_activity_group: @professional_development_groups.first, 
  current_user: current_user) do %>

  <% if @issued_badge.present? %>
    <div class="i-belong-dashboard__badge-section">
      <%= render DashBadgeComponent.new(
        badge: @issued_badge,
        tracking_event_category: @badge_tracking_event_category,
        tracking_event_label: @badge_tracking_event_label
      ) %>
    </div>
  <% end %>

  <%= render CpdCourseListComponent.new(current_user: current_user, courses: @cpd_courses, show_seperator: true) %>
<% end %>

<% @community_groups.each do |group| %>
  <%= render DashboardProgrammeActivityGroupSectionComponent.new(title: group.title,
    subtitle: group.web_copy_subtitle,
    aside_slug: group.web_copy_aside_slug,
    programme_activity_group: group, 
    current_user: current_user) do %>

    <%= render CommunityActivityListComponent.new(
      programme_activity_grouping: group,
      community_achievements: @community_achievements,
      number_to_show: 6,
      button_class: "ncce-button--white",
      class_name: "i-belong-dashboard"
    ) %>

  <% end %>
<% end %>

<% field.data.each_with_index do |v, i| %>
  <%= content_tag :dl, class: ['attribute--nested attribute--no-top-margin', { "attribute--no-bottom-margin": field.data.length === (i + 1) }] do %>
    <dt class='attribute-label attribute--inline'>Field</dt>
    <dd class='attribute-data attribute-data--reduce-margin attribute--inline'><%= "#{v.first.humanize}" %></dd>
    <dt class='attribute-label attribute--inline'>Change</dt>
    <dd class='attribute-data attribute-data--reduce-margin attribute--inline'><%= "#{v.last.join(' => ')}" %></dd>
  <% end %>
<% end %>

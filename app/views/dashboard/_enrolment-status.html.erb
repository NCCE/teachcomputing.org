<% if programme.user_enrolled?(current_user) %>
	<%= link_to 'Check progress', programme.path, class: 'govuk-button button button--small button--full-width' %>
<% elsif programme.user_completed?(current_user) %>
	<%= link_to 'View certifate', programme.path, class: 'govuk-button button button--small button--full-width' %>
<% else %>
	<%= link_to 'Enrol', programme.path, class: 'govuk-button button button--small button--full-width' %>
<% end %>

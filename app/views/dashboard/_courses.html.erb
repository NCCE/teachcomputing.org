<div class="ncce-dashboard-activity">
  <div class="govuk-width-container">
    <div class="govuk-main-wrapper">
      <h2 class="govuk-heading-m">Your courses</h2>
        <% if @achievements.size.positive? %>
          <ul class="govuk-list ncce-activity-list" role="list">
            <% @achievements.each do |achievement| %>
              <li class="ncce-activity-list__item ncce-activity-list__item--dashboard">
                <span class="screen-reader-only">Completed:</span>
                <span class="ncce-activity-list__item-text"> <%= achievement.activity.title %></span>
								<span class="ncce-activity-list__item--dashboard-tags">
									<% if achievement.cs_accelerator? %>
										<span class="govuk-body-s ncce-activity-list__item--dashboard-tags--course dashboard-tags--cs-accelerator"><strong>CS Accelerator</strong></span>
									<% elsif achievement.secondary_certificate? %>
										<span class="govuk-body-s ncce-activity-list__item--dashboard-tags--course dashboard-tags--secondary"><strong>Secondary</strong></span>
									<% elsif achievement.primary_certificate? %>
										<span class="govuk-body-s ncce-activity-list__item--dashboard-tags--course dashboard-tags--primary"><strong>Primary</strong></span>
									<% end %>
									<span class="govuk-body-s ncce-activity-list__item--dashboard-tags-date">Completed on <%= achievement.updated_at.strftime("%b %Y") %></h2></span>
								</span>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="govuk-body">When you have completed an online, face to face or remote course they will appear here.</p>
          <%= link_to 'Find a course', courses_path, class: 'govuk-button button' %>
        <% end %>
    </div>
  </div>
</div>

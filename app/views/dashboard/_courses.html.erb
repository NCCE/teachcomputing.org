<div class="ncce-dashboard-activity">
  <div class="govuk-width-container">
    <div class="govuk-main-wrapper">
      <h2 class="govuk-heading-m">Your courses</h2>
        <% if @achievements.size.positive? %>
          <ul class="govuk-list ncce-activity-list" role="list">
            <% @achievements.each do |achievement| %>
              <li class="ncce-activity-list__item ncce-activity-list__item--dashboard">
                <span class="screen-reader-only">Completed:</span>
                <span class="ncce-activity-list__item-text"> <%= link_to achievement.activity.title, '/', class: 'govuk-link ncce-link' %></span>
								<span class="ncce-activity-list__item--dashboard-tags">
									<% if achievement.programme.slug == 'cs-accelerator' %>
										<span class="ncce-activity-list__item--dashboard-tags--course ncce-activity-list__item--dashboard-tags--course-cs-accelerator">CS Accelerator</span>
									<% elsif achievement.programme.slug == 'secondary-certificate' %>
										<span class="ncce-activity-list__item--dashboard-tags--course ncce-activity-list__item--dashboard-tags--course-secondary">Secondary</span>
									<% elsif achievement.programme.slug == 'primary-certificate' %>
										<span class="ncce-activity-list__item--dashboard-tags--course ncce-activity-list__item--dashboard-tags--course-primary">Primary</span>
									<% end %>
									<span class="govuk-body-s ncce-activity-list__item--dashboard-tags-date">Completed on <%= achievement.updated_at.strftime("%b %Y") %></h2></span>
								</span>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="govuk-body">When you have completed an online or face to face course they will appear here.</p>
          <%= link_to 'Find a course', courses_path, class: 'govuk-button button' %>
        <% end %>
    </div>
  </div>
</div>

<% meta_tag :title, 'Your dashboard - Teach Computing' %>
<%= render 'components/hero', hero_title: 'Your dashboard', colour: 'blue', glyph_num: '1', glyph_position: 'bottom' %>
<div class="ncce-dashboard-activity">
	<div class="govuk-width-container">
		<div class="govuk-main-wrapper">
			<div class="govuk-grid-row">
				<div class="govuk-grid-column-two-thirds">
					<p class="govuk-body-l">Welcome to the Teach Computing Dashboard! Enrol and track your progress in our range of professional development programmes, accredited by BCS; The Chartered Institute for IT.</p>
				</div>
			</div>
			<h2 class="govuk-heading-m govuk-!-margin-bottom-6">Certificates</h2>
				<div class="certification__container">
					<%= render 'dashboard/certificates/primary', programme: Programme.primary_certificate %>
					<%= render 'dashboard/certificates/cs-accelerator', programme: Programme.cs_accelerator %>
					<%= render 'dashboard/certificates/secondary', programme: Programme.secondary_certificate if FeatureFlagService.new.flags[:secondary_certificate_enabled] %>
				</div>
			<%= render 'dashboard/courses' %>
		</div>
	</div>
</div>


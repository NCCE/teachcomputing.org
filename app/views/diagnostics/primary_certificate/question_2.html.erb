<%= render 'components/hero', hero_title: @programme.title, subtitle: 'Certification awarded by BCS, The Chartered Institute for IT', glyph_position: 'bottom', colour: 'orange' %>
<div class="govuk-width-container">
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <div class="ncce-primary-diagnostic__question">
          <%= link_to 'Back', previous_wizard_path, class: 'govuk-back-link' %>
          <h2
            class="govuk-heading-m ncce-primary-diagnostic__question-progress">
            <%= current_position(@steps, @step) %></h2>
          <%= form_for(:diagnostic, url: wizard_path(:question_3), method: :put) do |form| %>
          <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend">
              <p class="govuk-body-l">How confident are you in effectively
                teaching the whole of the KS1 Computing National Curriculum?</p>
            </legend>
            <p class="govuk-body">For example, are you familiar with common uses
              of technology beyond school, or how pupils can use technology to
              develop digital content?</p>
            <div class="govuk-radios">
              <div class="govuk-radios">
                <div class="govuk-radios__item">
                  <%= form.radio_button 'question_2', '5', class: 'govuk-radios__input', :checked => true %>
                  <label class="govuk-label govuk-radios__label"
                    for='diagnostic_question_2_5'>Not at all confident</label>
                </div>
                <div class="govuk-radios__item">
                  <%= form.radio_button 'question_2', '10', class: 'govuk-radios__input' %>
                  <label class="govuk-label govuk-radios__label"
                    for='diagnostic_question_2_10'>A little confident</label>
                </div>
                <div class="govuk-radios__item">
                  <%= form.radio_button 'question_2', '15', class: 'govuk-radios__input' %>
                  <label class="govuk-label govuk-radios__label"
                    for='diagnostic_question_2_15'>Fairly confident</label>
                </div>
                <div class="govuk-radios__item">
                  <%= form.radio_button 'question_2', '20', class: 'govuk-radios__input' %>
                  <label class="govuk-label govuk-radios__label"
                    for='diagnostic_question_2_20'>Very confident</label>
                </div>
              </div>
            </div>
          </fieldset>
          <%= form.submit 'Continue', class: 'govuk-button ncce-primary-diagnostic__button' %>
          <% end %>
        </div>
      </div>
      <%= render 'aside' %>
    </div>
  </div>
</div>

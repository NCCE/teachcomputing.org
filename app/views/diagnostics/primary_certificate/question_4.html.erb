
<div class="govuk-width-container">
  <div class="govuk-main-wrapper govuk-main-wrapper--xl">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h2 class="govuk-heading-m">Question 4</h2>
        <p class="govuk-body-l">How confident are you that you can support pupils to go beyond the requirements of the KS2 computing national curriculum, such as through introducing text based programming?</p>
        <%= form_for(:diagnostic, url: wizard_path(:wicked_finish), method: :put) do |form| %>
          <div class="govuk-radios">
            <div class="govuk-radios__item">
              <%= form.radio_button 'question_4', '5', class: 'govuk-radios__input' %>
                <label class="govuk-label govuk-radios__label" for='diagnostic_question_4_5'>Not at all confident</label>
            </div>
            <div class="govuk-radios__item">
              <%= form.radio_button 'question_4', '10', class: 'govuk-radios__input' %>
              <label class="govuk-label govuk-radios__label" for='diagnostic_question_4_10'>A little confident</label>
            </div>
            <div class="govuk-radios__item">
              <%= form.radio_button 'question_4', '15', class: 'govuk-radios__input' %>
              <label class="govuk-label govuk-radios__label" for='diagnostic_question_4_15'>Fairly confident</label>
            </div>
            <div class="govuk-radios__item">
              <%= form.radio_button 'question_4', '20', class: 'govuk-radios__input' %>
              <label class="govuk-label govuk-radios__label" for='diagnostic_question_4_20'>Very confident</label>
            </div>
          </div>
          <p class="govuk-body"></p>
          <%= form.submit 'Next', class: 'govuk-button ncce-button__pink' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

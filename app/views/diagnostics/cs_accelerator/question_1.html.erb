<%= render 'components/hero', hero_title: @programme.title, subtitle: 'Certification awarded by BCS, The Chartered Institute for IT', glyph_position: 'bottom', colour: 'purple' %>
<div class="govuk-width-container">
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row ncce-diagnostic__row">
      <div class="govuk-grid-column-two-thirds">
        <div class="ncce-diagnostic__question">
          <h2 class="govuk-heading-m ncce-diagnostic__question-progress"><%= current_position(@steps, @step) %></h2>
          <%= form_for(:diagnostic, url: wizard_path, method: :put) do |form| %>
            <fieldset class="govuk-fieldset">
              <legend class="govuk-fieldset__legend">
                <p class="govuk-body-l">What is your computer science curriculum subject knowledge confidence level?</p>
              </legend>
              <div class="govuk-radios">
                <div class="govuk-radios__item">
                  <%= form.radio_button :question_1, '1', class: 'govuk-radios__input', :checked => @answer == '1' || !@answer %>
                  <label class="govuk-label govuk-radios__label" for='diagnostic_question_1_1'>Not at all confident</label>
                </div>
                <div class="govuk-radios__item">
                  <%= form.radio_button :question_1, '2', class: 'govuk-radios__input', :checked => @answer == '2' %>
                  <label class="govuk-label govuk-radios__label" for='diagnostic_question_1_2'>Confident up to KS3</label>
                </div>
                <div class="govuk-radios__item">
                  <%= form.radio_button :question_1, '3', class: 'govuk-radios__input', :checked => @answer == '3' %>
                  <label class="govuk-label govuk-radios__label" for='diagnostic_question_1_3'>Confident up to KS4</label>
                </div>
                <div class="govuk-radios__item">
                  <%= form.radio_button :question_1, '4', class: 'govuk-radios__input', :checked => @answer == '4' %>
                  <label class="govuk-label govuk-radios__label" for='diagnostic_question_1_4'>Confident teaching beyond KS4</label>
                </div>
              </div>
            </fieldset>
            <%= form.submit 'Continue', class: 'govuk-button ncce-diagnostic__button' %>
          <% end %>
        </div>
      </div>
      <%= render 'aside' %>
    </div>
  </div>
</div>

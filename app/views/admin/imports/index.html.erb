<div class="govuk-width-container">
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column">
        <div class="govuk-grid-column-full">
          <h1>Import</h1>
          <table class="govuk-table">
            <caption class="govuk-table__caption">Future Learn Courses</caption>
            <thead class="govuk-table__head">
              <tr class="govuk-table__row">
                <th class="govuk-table__header" scope="col">Course</th>
                <th class="govuk-table__header" scope="col">Last Import</th>
                <th class="govuk-table__header" scope="col">Triggered by</th>
                <th class="govuk-table__header" scope="col">Upload CSV</th>
              </tr>
            </thead>
            <tbody class="govuk-table__body">
              <% @activities.each do |activity| %>
                <tr class="govuk-table__row">
                  <th class="govuk-table__header" scope="row"><%= activity.title %></th>
                  <td class="govuk-table__cell"><%= activity.imports.any? ? activity.imports.last.created_at.to_formatted_s(:short) : 'No previous imports' %></td>
                  <td class="govuk-table__cell"><%= activity.imports.any? ? activity.imports.last.triggered_by : 'No previous imports' %></td>
                  <td class="govuk-table__cell"><%= link_to 'Upload CSV', new_admin_import_path(activity_id: activity.id), class: 'govuk-button' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
         </div>
        </div>
      </div>
    </div>
  </div>
</div>

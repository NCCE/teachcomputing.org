<div class="course-details">
   <% @course.age_groups.each do |group| %>
    <% if @age_groups.has_value?(group.to_i) %>
      <strong class="govuk-tag ncce-courses__tag"><%= @age_groups.key(group.to_i) %></strong>
    <% end %>
  <% end %>
  <div class="course-details__icons">
  <% if @course.online_cpd %>
    <span class="govuk-body icon-online">Free online course</span>
    <% unless @occurrences.empty? %>
      <span class="govuk-body icon-calendar"><%= online_course_date(@occurrences.first.start_date) %></span>
    <% end %>
    <span class="govuk-body icon-clock">2 hours per week</span>
  <% else %>
    <span class="govuk-body icon-map-pin"><%= "#{remote_or_face_to_face(@course)} course" %></span>
    <span class="govuk-body icon-clock"><%= @course.duration %> <%= @course.remote_delivered_cpd ? 'hour'.pluralize(@course.duration.to_i) : 'day'.pluralize(@course.duration.to_i) %></span>
   <%= render 'courses/courses-locations' %>
  <% end %>
  </div>
</div>

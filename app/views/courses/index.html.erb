<div class="govuk-width-container">
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h2 class="govuk-heading-l">Courses</h2>
      </div>
      <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body">
          The face to face courses are booked on STEM.<br />
          The online courses are available on FutureLearn.<br />
          After you complete the course, come back here to the NCCE to track your progress towards certification.
        </p>

        <% @face_to_face_courses.each do |course| %>
          <div class="ncce-courses__course">
            <h4 class="govuk-heading-s"><a class="govuk-link" href="#"><%= link_to course.title, stem_course_link(course.course_template_no), class: 'govuk-link', target: :_blank %></a></h4>
            <p class="govuk-body"><%= stripped_summary(course.summary) %></p>
            <div class="govuk-body-s ncce-courses__meta">
              <% @face_to_face_course_occurrences.each do |oc| %>
                <% next unless oc.course_template_no == course.course_template_no %>
                <div class="ncce-courses__meta-item">
                  <span class="ncce-courses__meta--icon"><%= oc.address_town %></span>
                  <span><%= activity_dates(oc.start_date, oc.end_date) %></span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <% @online_courses.courses.each do |course| %>
          <div class="ncce-courses__course">
            <h4 class="govuk-heading-s"><%= link_to course[:title], course[:link], class: 'govuk-link', target: :_blank %></h4>
            <p class="govuk-body"><%= course[:description] %></p>
            <p class="govuk-body-s ncce-courses__meta">
              <span class="ncce-courses__meta--icon">Online - Future Learn</span>
            </p>
          </div>
        <% end %>
      </div>
      <div class="govuk-grid-column-one-third">
        <aside class="ncce-aside">
          <p class="govuk-body-s ncce-aside__text">Need help finding a course that's suitable for you? Use our diagnostic tool to identify the areas of subject
          knowledge where you need most support.</p>
          <p class="govuk-body-s"><%= link_to 'Download Diagnostic Tool PDF', activities_download_path(Activity.downloaded_diagnostic_tool.id, :file => { name: 'NCCE.Diagnostic.pdf', type: 'application/pdf' }), class: 'ncce-aside__link', target: :_blank %></p>
        </aside>
      </div>
    </div>
  </div>
</div>



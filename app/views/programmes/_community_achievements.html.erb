<% presenters.each do |presenter|%>

<li class="ncce-activity-list__item<%= presenter.list_item_classes %>">
      <span class="ncce-activity-list__item-text">
        <span><%= presenter.title %></span>
        <% if presenter.description.present? %>
          <span class="ncce-activity-list__item-description light-blue-bg"><%= presenter.description %></span>
        <% end %>
      </span>
      <% unless presenter.completed? %>
      <span class="ihavedonethis">
        <button aria-expanded="true" class="govuk-button button ihavedonethis__button">
        <%= presenter.button_label %>
        </button>
        <span class="ihavedonethis__popup">
          <%= form_for Achievement.new, url: { controller: 'achievements', action: 'create' } do |f| %>
            <span class="govuk-form-group ihavedonethis__group">
              <%= label_tag :self_verification_info, 'Please provide a link to the review', class: 'govuk-label ihavedonethis__text' %>
              <%= text_field_tag :self_verification_info, '', class: 'govuk-input' %>
              <%= f.hidden_field :activity_id, value: presenter.id %>
            </span>
            <%= f.submit 'Complete activity', class: 'govuk-button button' %>
          <% end %>
        </span>
      </span>
    <% end %>
</span>
<% end %>



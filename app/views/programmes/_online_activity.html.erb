<% if @online_achievements.try(:first) %>
  <% if @online_achievements.first.current_state == 'complete' %>
    <li class="ncce-activity-list__item">
      <span class="ncce-activity-list__item-text"> Completed your first
        online course
      </span>
      <span class="ncce-activity-list__item-activity">
        <span class="govuk-tag govuk-phase-banner__content__tag ncce-activity-list__tag">Complete
        </span>
        <%= @online_achievements.first.activity.title %>
      </span>
    </li>
  <% else %>
    <li class="ncce-activity-list__item ncce-activity-list__item--incomplete">
      <span class="ncce-activity-list__item-text"> Complete your first
        online course
      </span>
      <span class="ncce-activity-list__item-activity">
        <span class="govuk-tag govuk-phase-banner__content__tag ncce-activity-list__tag">In progress</span>
        <%= @online_achievements.first.activity.title %>
      <span>
    </li>
  <% end %>
<% else%>
  <li class="ncce-activity-list__item ncce-activity-list__item--incomplete">
    <span class="ncce-activity-list__item-text"> Complete your first online course </span>
    <%= link_to 'Find an online course', '/courses?location=Online', class: 'govuk-button ncce-button__pink ncce-button__pink--rounded' %>
  </li>
<% end %>

<% if @online_achievements.try(:second) %>
  <% if @online_achievements.second.current_state == 'complete' %>
  <li class="ncce-activity-list__item">
    <span class="ncce-activity-list__item-text"> Completed your second
      online course
    </span>
    <span class="ncce-activity-list__item-activity">
      <span class="govuk-tag govuk-phase-banner__content__tag ncce-activity-list__tag">Complete
      </span>
      <%= @online_achievements.second.activity.title %>
    </span>
  </li>
  <% else %>
    <li class="ncce-activity-list__item ncce-activity-list__item--incomplete">
      <span class="ncce-activity-list__item-text"> Complete your second
        online course
      </span>
      <span class="ncce-activity-list__item-activity">
        <span class="govuk-tag govuk-phase-banner__content__tag ncce-activity-list__tag">In progress</span>
        <%= @online_achievements.second.activity.title %>
      <span>
    </li>
  <% end %>
<% else %>
  <li class="ncce-activity-list__item ncce-activity-list__item--incomplete">
    <span class="ncce-activity-list__item-text"> Complete your second online course </span>
    <%= link_to 'Find an online course', '/courses?location=Online', class: 'govuk-button ncce-button__pink ncce-button__pink--rounded' %>
  </li>
<% end %>

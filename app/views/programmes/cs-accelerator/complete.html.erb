  <div class="govuk-width-container">
    <div class="govuk-main-wrapper">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
          <h2 class="govuk-heading-l ncce-programmes-activity__title">Your learning journey</h2>
        </div>
      </div>
      <ul class="govuk-list ncce-activity-list ncce-activity-list--programme" role="list">
        <%= render 'programmes/cs-accelerator/achievements' %>
      </ul>
    </div>
  </div>
</div>

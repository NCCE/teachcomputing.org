<header class="govuk-header" role="banner" data-module="header">
  <div class="govuk-header__container govuk-width-container">
    <div class="govuk-header__logo">
      <%= link_to(root_path, class: 'govuk-header__link govuk-header__link--homepage') do %>
        <span class="govuk-header__logotype">
          <span class="govuk-header__logotype-text">
            National Centre for<br>Computing Education
          </span>
        </span>
      <% end %>
    </div>
    <div class="govuk-header__content ncce-header__content">
      <button type="button" role="button" class="govuk-header__menu-button js-header-toggle" aria-controls="navigation" aria-label="Show or hide Top Level Navigation">Menu</button>
      <% if current_user %>
      <nav>
        <ul id="navigation" class="govuk-header__navigation" aria-label="Top Level Navigation">
          <li>
          </li>
          <li class="govuk-header__navigation-item govuk-header__navigation-item">
            <%= link_to 'Your dashboard', dashboard_path, class: 'govuk-header__link' %>
          </li>
          <li class="govuk-header__navigation-item govuk-header__navigation-item">
            <%= link_to 'Edit profile', edit_profile_url, class: 'govuk-header__link', target: '_blank' %>
          </li>
          <li class="govuk-header__navigation-item govuk-header__navigation-item">
            <%= link_to 'Logout', logout_url, class: 'govuk-header__link' %>
          </li>
        </ul>
      </nav>
      <% else %>
      <nav>
        <ul id="navigation" class="govuk-header__navigation " aria-label="Top Level Navigation">
          <li>
          </li>
          <li class="govuk-header__navigation-item govuk-header__navigation-item">
            <%= link_to 'Create an account / log in', login_url, :class => 'govuk-header__link' %>
          </li>
        </ul>
      </nav>
      <% end %>
    </div>
  </div>
</header>

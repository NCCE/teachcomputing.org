<% meta_tag :title, 'Primary certificate - Teach Computing' %>
<%= render 'pages/certification/hero_with_video' %>
<div class="govuk-width-container">
  <main class="govuk-main-wrapper govuk-main-wrapper--xl">

    <div class="govuk-grid-row">

      <div class="govuk-grid-column-two-thirds">
        <section class='ncce-section govuk-!-margin-top-0'>
          <p class="govuk-body"><%= t('.intro') %></p>
          <p class="govuk-body"><%= t('.intro_time') %></p>
        </section>

        <section class='ncce-section'>
          <h2 class="govuk-heading-m"><%= t('.who_heading') %></h2>
          <ul class="govuk-list govuk-list--bullet">
            <li><%= t('.who_list_1') %></li>
            <li><%= t('.who_list_2') %></li>
          </ul>
        </section>

        <section class='ncce-section govuk-!-padding-5 lime-green-bg'>
          <h2 class="govuk-heading-m"><%= t('.first-time_heading') %></h2>
          <p class="govuk-body govuk-!-margin-bottom-0">
            <%= t(
              '.first-time_text.html',
              introductory_link: link_to(t('.introductory'), create_account_url, method: :post, class: 'ncce-link ncce-link__log', role: 'button', draggable: 'false'),
            ) %>
          </p>
        </section>

        <section class='ncce-section'>
          <h2 class="govuk-heading-m"><%= t('.what_heading') %></h2>
          <ul class="govuk-list govuk-list--bullet">
            <li><%= t('.what_list_1') %></li>
            <li><%= t('.what_list_2') %></li>
            <li><%= t('.what_list_3') %></li>
            <li><%= t('.what_list_4') %></li>
          </ul>
        </section>

        <section class='ncce-section'>
          <div class="pathway-wrapper govuk-!-margin-top-0 light-grey-bg">
            <h2 class="govuk-heading-s pathway__step-title"><%= t('.programme_heading') %></h2>
            <p class="govuk-body"><%= t('.programme_body') %></p>

            <ul class="govuk-list govuk-list--bullet">
              <li>
                <%= t(
                  '.programme_list_1.html',
                  create_link: link_to(t('.create'), create_account_url, method: :post, class: 'ncce-link ncce-link__log', role: 'button', draggable: 'false'),
                  login_link: link_to(t('.log_in'), auth_url, method: :post, class: 'ncce-link ncce-link__log', role: 'button', draggable: 'false')
                ) %>
              </li>
              <li><%= t('.programme_list_2') %></li>
              <li><%= t('.programme_list_3') %></li>
            </ul>

            <%= render DocumentCardsComponent.new({
              class_name: 'pathway-cards',
              show_border: false,
              cards_per_row: 1,
              cards: [
                {
                  class_name: 'developing-in-the-classroom',
                  title_link: {
                    title: 'pages.enrolment.primary-certificate.developing_title',
                    url: '/',
                    tracking_label: ''
                  },
                  body: {
                    text: 'pages.enrolment.primary-certificate.developing_text'
                  },
                  button: {
                    title: 'pages.enrolment.primary-certificate.enrol',
                    url: '/',
                    tracking_label: ''
                  }
                },
                {
                  class_name: 'specialising-or-leading',
                  title_link: {
                    title: 'pages.enrolment.primary-certificate.specialising_title',
                    url: '/',
                    tracking_label: ''
                  },
                  body: {
                    text: 'pages.enrolment.primary-certificate.specialising_text'
                  },
                  button: {
                    title: 'pages.enrolment.primary-certificate.enrol',
                    url: '/',
                    tracking_label: ''
                  }
                }
              ]
            }) %>
          </div>
        </section>
      </div>

      <div class="govuk-grid-column-one-third">
        <%= render BursaryComponent.new(tracking_event_category: '', tracking_event_label: 'Bursaries') %>
        <%= render AsideComponent.new(
          title: t('.hub_aside.title'),
          text: t('.hub_aside.text'),
          link: {
            text: t('.hub_aside.link_title'),
            url: '/hubs',
            class: 'ncce-link',
            tracking_label: ''
          },
          tracking_category: ''
        ) %>
      </div>

    </div>

  </main>
</div>

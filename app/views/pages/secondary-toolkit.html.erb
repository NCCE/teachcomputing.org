<% meta_tag :title, t('.hero.title') %>
<% meta_tag :description, t('.hero.subtitle') %>
<% meta_tag :url, request.original_url %>

<%= render HeroComponent.new(
  title: t('.hero.title'),
  subtitle: t('.hero.subtitle'),
  small_title: true,
  full_width: true
) %>

<div class="light-grey-bg">
  <div class="govuk-width-container">
    <div class="govuk-main-wrapper">
      <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            <p class="govuk-body"><%= t(".intro.text") %></h2>

            <%= render BorderedCardsComponent.new(
              cards_per_row: 3,
              class_name: 'intro-help-cards',
              cards: [
                {
                  class_name: 'bordered-card--toolkit',
                  title: t('.intro.cards.knowledge.title'),
                  text: t('.intro.cards.knowledge.text.html', 
                    subject_knowledge_link: link_to('subject knowledge', cs_accelerator_path),
                    a_level_link: link_to('A level certificate', a_level_path)),
                },
                {
                  class_name: 'bordered-card--toolkit',
                  title: t('.intro.cards.pedagogy.title'),
                  text: t('.intro.cards.pedagogy.text.html',
                    certificate_link: link_to("Teach secondary computing certificate", secondary_path)),
                },
                {
                  class_name: 'bordered-card--toolkit',
                  title: t('.intro.cards.assess.title'),
                  text: t('.intro.cards.assess.text.html',
                    cqf_link: link_to("Computing Quality Framework", computing_quality_framework_url),
                    cluster_link: link_to("Computing Cluster", cms_page_path("computing-clusters"))),
                }
              ]
            ) %> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render FullImageBannerComponent.new(title: t(".i_belong_banner.title"),
  text: t('.i_belong_banner.content.html',
    course_link: link_to("Encouraging girls into GCSE computer science short course", "/courses/CP440/encouraging-girls-into-gcse-computer-science-remote-short-course")),
  background_color: 'orange-bg',
  image_side: :right,
  image: { 
    url: "media/images/pages/secondary-toolkit/i_belong_students.jpeg",
    alt: "i belong",
    class: "i-belong"
  },
  link: link_to("Get involved in I Belong", about_i_belong_path, class: "govuk-button button")) %>

<div class="govuk-width-container">
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
          <h2 class="govuk-heading-l"><%= t(".supporting.title") %></h2>
          <p class="govuk-body"><%= t(".supporting.para_1") %></p>
          <%= link_to "Find out more", non_gcse_path, class: "govuk-button button button--inverted" %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render TestimonialsComponent.new(
  testimonials: [
    {
      text: t(".testimonials.pete.text"),
      image: "media/images/pages/secondary-toolkit/pete.png",
      name: t(".testimonials.pete.name"),
      bio: t(".testimonials.pete.bio"),
    },
    {
      text: t(".testimonials.tori.text"),
      image: "media/images/pages/secondary-toolkit/tori.png",
      name: t(".testimonials.tori.name"),
      bio: t(".testimonials.tori.bio"),
    }
  ],
  event_tracking_category: nil,
  testimonials_per_row: 2,
) %>
<div class="purple-bg">
  <div class="govuk-width-container">
    <div class="govuk-main-wrapper">
      <div class="govuk-grid-row">
          <div class="govuk-grid-column-full">
            <p class="govuk-body govuk-!-text-align-centre">
              <%= link_to "News, blogs and case studies", cms_posts_path, class: "govuk-button button button--inverted" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render CourseGridComponent.new(
  title: t(".courses.title"),
  intro: t(".courses.intro.html",
    subsidies_link: link_to("access subsidies", cms_page_path("funding"))),
  event_category: 'Primary teacher',
  course_link: courses_path(params: { certificate: 'secondary-certificate' }),
  courses: [
    {
      image: "media/images/pages/secondary-toolkit/python_programming.jpeg",

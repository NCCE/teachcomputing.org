<div class="light-grey-bg">
  <div class="govuk-width-container">
    <div class="govuk-main-wrapper">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
          <h1 class="govuk-heading-l"><%= t(".resources.title") %></h1>

          <%= render BorderedCardsComponent.new(
            cards_per_row: 3,
            class_name: 'resources-help-cards',
            cards: [
              {
                class_name: 'bordered-card--toolkit',
                title: t('.resources.cards.curriculum.title'),
                text: t('.resources.cards.curriculum.text.html'),
                link: {
                  link_title: t('.resources.cards.curriculum.link.title'),
                  link_url: t('.resources.cards.curriculum.link.url'),
                  tracking_page: 'Secondary toolkit',
                  tracking_label: t('.resources.cards.curriculum.link.event-label')
                }
              },
              {
                class_name: 'bordered-card--toolkit--isaac',
                title: t('.resources.cards.isaac.title'),
                text: t('.resources.cards.isaac.text.html',
                  a_level_link: link_to("A&nbsp;level".html_safe, "https://isaaccomputerscience.org/events?examBoard=all&show_stage_only=a_level&stage=all"),
                  gcse_link: link_to("GCSE", 'https://isaaccomputerscience.org/events?examBoard=all&show_stage_only=gcse&stage=all')),
                link: {
                  link_title: t('.resources.cards.isaac.link.title'),
                  link_url: t('.resources.cards.isaac.link.url'),
                  tracking_page: 'Secondary toolkit',
                  tracking_label: t('.resources.cards.isaac.link.event-label')
                }
              },
              {
                class_name: 'bordered-card--toolkit',
                title: t('.resources.cards.question_banks.title'),
                text: t('.resources.cards.question_banks.text.html', 
                  teaching_link: link_to('Teaching secondary computing certificate', secondary_certificate_url)),
                link: {
                  link_title: t('.resources.cards.question_banks.link.title'),
                  link_url: t('.resources.cards.question_banks.link.url'),
                  tracking_page: 'Secondary toolkit',
                  tracking_label: t('.resources.cards.question_banks.link.event-label')
                }
              }
            ]
          ) %>
        </div>
      </div> 
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full govuk-!-margin-top-3">
            <%= render BorderedCardsComponent.new(
              cards_per_row: 1,
              cards: [
                {
                  class_name: 'bordered-card--secondary-cert',
                  title: t(".resources.safety.heading"),
                  text: t(".resources.safety.text"),
                  button: :no_stretch,
                  links: [{
                    link_title: t(".resources.safety.link.text"),
                    link_url: t(".resources.safety.link.url"),
                    tracking_page: 'Secondary toolkit',
                    tracking_event: 'online_safety'
                  }]
                }
              ]
            ) %>
        </div>
      </div>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full govuk-!-margin-top-3">
          <%= render BorderedCardsComponent.new(
            cards_per_row: 1,
            class_name: 'i-belong',
            cards: [
              {
                class_name: 'bordered-card--i-belong',
                title: t('.resources.cards.i_belong.title'),
                text: t('.resources.cards.i_belong.text.html'),
                clickable_i_belong: about_i_belong_path
              }
            ]
          ) %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="govuk-width-container">
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h2 class="govuk-heading-l"><%= t(".further_learning.title") %></h2>
          <p class="govuk-body"><%= t(".further_learning.para_1") %></p>
          <p class="govuk-body"><%= t(".further_learning.para_2") %></p>
          <%= link_to t(".further_learning.link"), secondary_enrichment_path, class: "govuk-button button" %>
        </div>
        <div class="govuk-grid-column-one-third">
          <%= render AsideComponent.new do |component| %>
            <%= component.with_heading do %>
              <p class="govuk-body-m with-icon-coloured-right">
                <%= t(".further_learning.aside.title") %>
                <%= image_pack_tag "media/images/icons/ambassador_orange.svg" %>
              </p>
            <% end %>
            <%= component.with_body do %>
              <p class="govuk-body-s">
                <%= t(".further_learning.aside.text.html",
                    visit_link: link_to('visit your school', stem_ambassadors_url)) %>
              </p>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render FullImageBannerComponent.new(title: t(".career_banner.title"),
  text: t('.career_banner.content'),
  background_color: 'purple-bg',
  image: { 
    url: "media/images/pages/secondary-toolkit/secondary_careers.jpeg",
    alt: "teach computing secondary careers"
  },
  link: link_to("Find out more", '')) %>

<div class="govuk-width-container">
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
          <h2 class="govuk-heading-l"><%= t(".support.title") %></h2>
          <p class="govuk-body"><%= t(".support.para_1_html",
            hubs_link: link_to('Computing Hubs', hubs_path)) %></p> 
          <p class="govuk-body"><%= t(".support.para_2_html",
            stem_community_link: link_to('STEM Community', stem_community_url)) %></p> 
        </div>
      </div>
    </div>
  </div>
</div>
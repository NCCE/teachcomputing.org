<% meta_tag :title, t('.hero.title') %>
<% meta_tag :description, t('.hero.subtitle') %>
<% meta_tag :url, request.original_url %>

<%# Hero: Support for primary senior leaders %>
<%= render HeroComponent.new(
  title: t('.hero.title'),
  subtitle: t('.hero.subtitle'),
  color: 'primary',
  small_title: true
) %>

<%# How we can help you and your school %>
<div class="light-grey-bg">
  <div class="govuk-width-container">
    <div class="govuk-main-wrapper">

      <div class="govuk-grid-row">
        <h1 class="govuk-heading-l"><%= t(".support.title") %></h2>

        <p class="govuk-body">
          <%= t(".support.paragraph_1") %>
        </p>
        <p class="govuk-body">
          <%= t(".support.paragraph_2") %>
        </p>
      </div>

      <div class="govuk-grid-row govuk-!-margin-top-6">
        <%= render IconRowComponent.new(
          icons: [
            { image_url: "media/images/icons/curriculum.svg", text: "Curriculum design"},
            { image_url: "media/images/icons/subject_knowledge.svg", text: "Subject knowledge"},
            { image_url: "media/images/icons/physical_computing_kits.svg", text: "Physical computing kits"},
            { image_url: "media/images/icons/real_world.svg", text: "Real-world contexts"},
            { image_url: "media/images/icons/subject_matter_experts.svg", text: "Subject matter experts support"},
          ]
        ) %>
      </div>

      <div class="govuk-grid-row govuk-!-margin-top-6">
        <div class="govuk-grid-column-two-thirds">

          <%= render partial: 'pages/computing_quality_framework' %>
         
        </div>
        <div class="govuk-grid-column-one-third">
          <%= render AsideComponent.new(
            title: "Not currently offering GCSE Computer Science?",
            text: "We have additional funding and subject matter expert support available to schools and colleges with an ambition to add GCSE Computer Science as an option to their students."
          ) %>
          <%= link_to 'Find our more', cms_page_url('computing-teaching-schools-support'), class: "govuk-button ncce-button__white senior-aside-button" %>

          <%= render AsideComponent.new(
            title: "Guidance for offering computing",
            text: "Our network of Computing Hubs is there to support you and your school to offer exemplary computing education for all."
          ) %>
          <%= link_to 'Contact you local<br />Computing Hub'.html_safe, hubs_url, class: "govuk-button ncce-button__white senior-aside-button" %>
        </div>
      </div>
    </div>
  </div>
</div>


<%= render partial: 'pages/i_belong_banner' %>

<div class="govuk-width-container">
  <div class='govuk-main-wrapper'>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <%= render NonBorderedCardsComponent.new(
          class_name: 'senior-leaders',
          cards_per_row: 3,
          cards: [
            {
              title: t('.objectives.cards.invest.title'),
              text: t('.objectives.cards.invest.text.html',
                  subsidies_link: (link_to('subsidies', ''))),
              image_url: 'media/images/pages/secondary-senior-leaders/invest_in_your_teachers.svg',

              link: { link_url: courses_url, link_title: t('.objectives.cards.invest.link_text')}
            },
            {
              title: t('.objectives.cards.certification.title'),
              text: t('.objectives.cards.certification.text.html'),
              image_url: 'media/images/pages/secondary-senior-leaders/secondary_certification.svg',
              link: { link_url: secondary_certification_url, link_title: t('.objectives.cards.certification.link_text')}
            },
            {
              title: t('.objectives.cards.download-brochure.title'),
              text: t('.objectives.cards.download-brochure.text.html'),
              image_url: 'media/images/pages/secondary-senior-leaders/secondary_brochure.svg',
              link: { link_url: 'https://static.teachcomputing.org/NCCE_Secondary_Brochure_Digital_September.pdf', link_title: t('.objectives.cards.download-brochure.link_text')}
            },
          ]
        )%>
      </div>
    </div>
  </div>
</div>

<%= render partial: "pages/inspire_with_computing_ambassador" %>

<div class="light-grey-bg">

<div class="ncce-home-hero-wrapper">
    <div class="ncce-home-hero">
      <div class="ncce-home-hero__column">
        <div class="ncce-home-hero__house">
          <h1><%= t("pages.home.hero.heading") %></h1>
          <p><%= t("pages.home.hero.subheading") %></p>
          <ul>
            <li><%= t("pages.home.hero.point1") %></li>
            <li><%= t("pages.home.hero.point2") %></li>
            <li><%= t("pages.home.hero.point3") %></li>
            <li><%= t("pages.home.hero.point4") %></li>
          </ul>

          <div class="ncce-home-hero__house__button-container">
            <% if current_user %>
              <%= link_to t("pages.home.hero.view"), dashboard_path, class: "govuk-button button ncce-button", data: { event_action: "click", event_category: "Homepage", event_label: "Dashboard" } %>
              <%= link_to t("pages.home.hero.learn"), about_path, class: "govuk-button button ncce-button ncce-button__white", data: { event_action: "click", event_category: "Homepage", event_label: "About us" } %>
            <% else %>
              <%= link_to t("pages.home.hero.join"), auth_url, class: "govuk-button button ncce-button", data: { event_action: "click", event_category: "Homepage", event_label: "Join for free" } %>
              <%= link_to t("pages.home.hero.learn"), about_path, class: "govuk-button button ncce-button ncce-button__white", data: { event_action: "click", event_category: "Homepage", event_label: "About us" } %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="ncce-home-hero__column">
      </div>
    </div>
</div>

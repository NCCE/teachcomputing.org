{
  "name": "ncce-project",
  "engines": {
    "yarn": "1.x"
  },
  "private": true,
  "dependencies": {
    "@rails/ujs": "^6.0.3",
    "@rails/webpacker": "5.2.1",
    "cookieconsent": "^3.1.0",
    "govuk-frontend": "^2.3.0",
    "stimulus": "^1.1.1",
    "webpack": "^4.0.0",
    "yargs-parser": "^20.2.0"
  },
  "devDependencies": {
    "eslint": "5.6.1",
    "eslint-config-prettier": "3.1.0",
    "eslint-plugin-prettier": "3.0.0",
    "lint-staged": "7.3.0",
    "prettier": "1.14.3",
    "prettier-package-json": "2.0.1",
    "prettier-stylelint": "0.4.2",
    "stylelint": "9.6.0",
    "stylelint-config-recommended-scss": "3.2.0",
    "stylelint-order": "1.0.0",
    "stylelint-scss": "3.3.1",
    "webpack-dev-server": "^3.11.0",
    "libnpx": "^10.2.3"
  },
  "scripts": {
    "setup": "npx ./scripts/setup.sh",
    "start": "npx ./scripts/docker-start.sh",
    "stop": "npx ./scripts/docker-stop.sh",
    "reset-db": "npx ./scripts/reset-db.sh",
    "start-tunnel": "ssh -fCND 8889 -L8888:127.0.0.1:8888 -S /tmp/.ssh_stem_proxy -M proxy",
    "stop-tunnel": "ssh -S /tmp/.ssh_stem_proxy -O exit proxy",
    "logs": "docker-compose logs -f",
    "bundle": "docker-compose run --rm --no-deps web bundle",
    "bundle-install": "yarn run bundle install && docker-compose restart web && yarn start",
    "bundle-update": "yarn run bundle update && docker-compose restart web && yarn start",
    "exec": "yarn run bundle exec",
    "shell": "docker-compose exec web sh",
    "test": "yarn run exec rspec",
    "test-debug": "docker-compose exec web rdebug-ide --host 0.0.0.0 --port 1235 -- bin/rspec"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix --syntax=scss",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  },
  "pre-commit": "lint:staged"
}
